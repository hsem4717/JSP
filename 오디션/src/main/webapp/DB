CREATE TABLE TBL_POINT_201905 (
	SERIAL_NO NUMBER(8) not null,
	ARTIST_ID char(4),
	MENTO_ID char(4),
	SCORE NUMBER(3),
	primary key(SERIAL_NO),
	foreign key(ARTIST_ID) references TBL_ARTIST_201905(ARTIST_ID),
	foreign key(MENTO_ID) references TBL_MENTO_201905(MENTO_ID)
);

