select * from tbl_point_201905 NATURAL JOIN tbl_artist_201905 NATURAL JOIN tbl_mento_201905;
select * from tbl_artist_201905;


select ARTIST_ID, ARTIST_NAME, SUM(SCORE), AVG(SCORE) from tbl_point_201905 NATURAL JOIN tbl_artist_201905 NATURAL JOIN tbl_mento_201905 GROUP BY ARTIST_ID, ARTIST_NAME ORDER BY AVG(SCORE);   


SELECT ARTIST_ID, ARTIST_NAME, SUM(SCORE), AVG(SCORE) 
FROM tbl_point_201905 
NATURAL JOIN tbl_artist_201905 
NATURAL JOIN tbl_mento_201905 
GROUP BY ARTIST_ID, ARTIST_NAME 
ORDER BY AVG(SCORE);
